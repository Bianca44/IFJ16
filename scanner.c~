// test
#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include "ial.h"

int main(int argc, char *args[])
{
	printf("IFJ 16 %d \n", argc);

	int c;
	int state = 0;
	while ((c = fgetc(stdin)) != EOF) {
		printf("char: %c \n", c);

		switch (state) {
			printf("ahoj space pre %c \n", c);;
		case 0 /*START*/:
			if (isspace(c)) {
				state = 0;
				printf("ahoj space pre %c \n", c);;
			}

			if (isdigit(c)) {
				state = 1 /* number ? */ ;
				printf("ahoj 1 pre %c \n", c);;
			}

			if (isalpha(c)) {
				state = 2 /* string ? */ ;
				printf("ahoj znak pre %c \n", c);;
			}
			break;
		case 1:	/* moybe number */
			printf("ahoj \n");
			break;
		}
	}
	return 0;

}
